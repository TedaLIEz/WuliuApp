        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="退出登陆"-->
        <!--android:background="@color/_red"-->
        <!--android:id="@+id/exit_login"-->
        <!--android:textColor="@android:color/white"-->
        <!--android:layout_marginBottom="10dp"></Button>-->
</LinearLayout>
