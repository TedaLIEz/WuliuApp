<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="40dp"
    android:paddingLeft="60dp"
    android:paddingRight="60dp"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/information3_image_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/custumer"
        android:layout_marginBottom="25dp" />

    <TextView
        android:id="@+id/call_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/information3_image_view"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:textSize="25sp"
        android:textColor="#0d0"
        android:text="某先生" />

    <LinearLayout
        android:id="@+id/information3_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/call_name"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/grey_line"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/call_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#0d0"
                android:text="姓名:" />

            <TextView
                android:id="@+id/name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#555"
                android:layout_marginLeft="5dp"
                android:textSize="20sp"
                android:singleLine="true"
                android:text="无"/>
        </LinearLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/grey_line"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/call_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#0d0"
                android:text="电话:" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#555"
                android:textSize="20sp"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:text="无"/>
        </LinearLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/grey_line"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/call_name4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#0d0"
                android:text="邮箱:" />

            <TextView
                android:id="@+id/mail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#555"
                android:layout_marginLeft="5dp"
                android:textSize="20sp"
                android:text="无"
                />
        </LinearLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/grey_line"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="退出登陆"
            android:background="@color/_red"
            android:id="@+id/exit_login"
            android:layout_marginBottom="10dp"></Button>
    </LinearLayout>

</RelativeLayout>
