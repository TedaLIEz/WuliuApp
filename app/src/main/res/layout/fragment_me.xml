<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:background="#f3f3f3">
        <TextView
            android:id="@+id/me_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="姓名"/>
        <TextView
            android:id="@+id/me_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="魏鸿鑫"
            android:textSize="17sp"
            android:textColor="@color/text_color"
            android:layout_toRightOf="@id/me_title"
            android:layout_marginLeft="10dp"
            />
    </RelativeLayout>
    <View
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c9c9c9"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/ic_phone"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/phone"/>
        <TextView
            android:id="@+id/me_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="133 7787 3941"
            android:layout_marginLeft="24dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ic_phone"
            android:textSize="17sp"
            android:gravity="center_vertical"/>
    </RelativeLayout>
    <View
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c9c9c9"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/ic_vehicle"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:src="@drawable/vehicle"
            android:layout_marginLeft="30dp"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/me_vehicle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="湘A35266 载货车 箱式"
            android:textSize="17sp"
            android:layout_toRightOf="@id/ic_vehicle"
            android:gravity="center_vertical"
            android:layout_marginLeft="24dp"
            />
    </RelativeLayout>
    <View
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_marginLeft="70dp"
        android:layout_height="1dp"
        android:background="#c9c9c9"
        />
    <TextView
        android:id="@+id/me_car_num"
        android:layout_marginLeft="72dp"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:textSize="17sp"
        android:text="16米 5吨 13.3方"/>
    <View
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c9c9c9"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/ic_location"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:src="@drawable/location"
            android:layout_marginLeft="30dp"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/me_will"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="广东省广州市 -- 湖北省武汉市"
            android:textSize="17sp"
            android:layout_toRightOf="@id/ic_location"
            android:gravity="center_vertical"
            android:layout_marginLeft="24dp"
            />
        <Button
            android:id="@+id/willbtn"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center|center_vertical"
            android:background="@color/text_color"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="修改"
            android:textColor="@android:color/white"/>
    </RelativeLayout>
    <View
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c9c9c9"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="#f3f3f3"></RelativeLayout>
    <View
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c9c9c9"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:clickable="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="意见反馈"
            android:gravity="center_vertical"
            android:textSize="17sp"
            android:layout_marginLeft="30dp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@drawable/right_arrow"/>
    </RelativeLayout>
    <View
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c9c9c9"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:clickable="true"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="检查更新"
            android:gravity="center_vertical"
            android:textSize="17sp"
            android:layout_marginLeft="30dp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@drawable/right_arrow"/>
    </RelativeLayout>
    <View
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c9c9c9"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"></RelativeLayout>
