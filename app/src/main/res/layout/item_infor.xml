<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="12dp"
    android:paddingLeft="14dp"
    android:paddingRight="14dp"
    android:paddingBottom="8dp"
    >

    <LinearLayout
        android:id="@+id/firstLine"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/_black"
            android:textSize="@dimen/big_text"
            android:typeface="sans"></TextView>

        <ImageView
            android:id="@+id/arrow"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:src="@drawable/arrow"/>


        <TextView
            android:id="@+id/destination"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/_black"
            android:text=""
            android:textSize="@dimen/big_text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_marginTop="3dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/kind_cargo"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/_black"
            android:textSize="@dimen/big_text" />

        <TextView
            android:id="@+id/weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/text_color"
            android:textSize="@dimen/big_text" />

        <TextView
            android:id="@+id/kind_car"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text_color"
            android:textSize="@dimen/big_text" />

        <TextView
            android:id="@+id/length"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/default_length"
            android:textColor="@color/text_color"
            android:textSize="@dimen/big_text" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_marginTop="3dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/contact_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/_black"
            android:textSize="@dimen/big_text"
            android:typeface="sans" />

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/_black"
            android:layout_marginLeft="25dp"
            android:text=""
            android:textSize="@dimen/big_text"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/contact_man" />

        <Button
            android:id="@+id/mbtn"
            android:layout_width="66dp"
            android:layout_height="26dp"
            android:background="@drawable/call_button"
            android:focusable="false"
            android:layout_marginTop="5dp"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            android:text="" />
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/_black"
            android:text=""
            android:textSize="@dimen/small_text"
            android:layout_marginTop="23dp"/>
    </RelativeLayout>


</LinearLayout>